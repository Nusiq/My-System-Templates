{
	"$schema": "https://raw.githubusercontent.com/Bedrock-OSS/regolith-schemas/main/config/v1.4.json",
	"author": "`author_name`",
	"name": "`project_name`",
	"packs": {
		"behaviorPack": "./packs/BP",
		"resourcePack": "./packs/RP"
	},
	"regolith": {
		"dataPath": "filters_data",
		"filterDefinitions": {
			"name_ninja": {
				"url": "github.com/Bedrock-OSS/regolith-filters",
				"version": "1.2.4"
			},
			"pack_anything": {
				"url": "github.com/Nusiq/regolith-filters",
				"version": "1.0.1"
			},
			"subfunctions": {
				"url": "github.com/Nusiq/regolith-filters",
				"version": "2.1.2"
			},
			"system_template": {
				"url": "github.com/Nusiq/regolith-filters",
				"version": "3.14.0"
			},
			"system_template_esbuild": {
				"url": "github.com/Nusiq/regolith-filters",
				"version": "3.0.0"
			},
			"texture_list": {
				"url": "github.com/Bedrock-OSS/regolith-filters",
				"version": "1.1.3"
			}
		},
		"formatVersion": "1.4.0",
		"profiles": {
			"default": {
				"export": {
					"build": "standard",
					"target": "development"
				},
				"filters": [
					{
						"profile": "_start"
					},
					{
						"filter": "system_template_esbuild",
						"settings": {
							"minify": false,
							"sourcemap": true,
							"working_dir": "debug/script"
						}
					},
					{
						"profile": "_end"
					}
				]
			},
			"local_build": {
				"export": {
					"target": "local"
				},
				"filters": [
					{
						"profile": "default"
					}
				]
			},
			"publish": {
				"export": {
					"target": "none"
				},
				"filters": [
					{
						"profile": "default"
					},
					{
						"filter": "pack_anything",
						"settings": {
							"output": "releases/release.mctemplate",
							"pathmap": {
								"BP": "behavior_packs/0",
								"`f'PROJECT:worlds/{project_name_dashes}'`": ".",
								"RP": "resource_packs/0"
							}
						}
					}
				]
			},
			"_start": {
				"export": {
					"target": "none"
				},
				"filters": [
					{
						"filter": "system_template",
						"settings": {
							"log_path": "system_template_log.json",
							"replacements": {
								"`namespace_replacement_trigger`": "`namespace_replacement_target`"
							},
							"scope_path": "scope.json"
						}
					},
					{
						"filter": "subfunctions",
						"settings": {
							"scope_path": "scope.json"
						}
					}
				]
			},
			"_end": {
				"export": {
					"target": "none"
				},
				"filters": [
					{
						"filter": "name_ninja",
						"settings": {
							"blocks": {
								"auto_name": true
							},
							"entities": {
								"auto_name": true
							},
							"items": {
								"auto_name": true
							},
							"spawn_eggs": {
								"auto_name": true,
								"postfix": "",
								"prefix": "Spawn "
							}
						}
					},
					{
						"filter": "texture_list"
					}
				]
			}
		}
	},
	"worlds": ["./worlds/*"]
}
